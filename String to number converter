#include<stdio.h>
#include<string.h>
#include<stdlib.h>
#define SIZE 10
void main()
{
	int sum;
	char arr1[SIZE]= "", arr2[SIZE] = "", arr3[SIZE] = "", arr4[SIZE] = "";
	printf("Enter an integer string: ");
	fgets(arr1, 10, stdin);
	printf("Enter an integer string: ");
	fgets(arr2, 10, stdin);
	printf("Enter an integer string: ");
	fgets(arr3, 10, stdin);
	printf("Enter an integer string: ");
	fgets(arr4, 10, stdin);
	sum = atoi(arr1)+ atoi(arr2) + atoi(arr3) + atoi(arr4); //using string function ascii to integer
	printf("The sum of the numbers is: %d", sum);
}
